<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/first_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ypg"/>
            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임 입니다"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="65dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nickname"
                android:text="Lv :1"
                android:textSize="20sp"
                android:textColor="#ffff0000"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="175dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/coin"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nickname"
                android:text="10 COIN"
                android:textSize="20sp"
                android:textColor="#ffffda00"
                android:layout_alignParentRight="true"
                android:textStyle="bold|italic"
                android:layout_marginRight="50dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="#ffffda00"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"

                android:layout_marginRight="120dp"
                android:layout_below="@id/nickname"/>
            <ProgressBar
                android:id="@+id/bar"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/coin"
                android:layout_marginTop="16dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="exp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/coin"
                android:layout_marginTop="18dp"
                android:layout_marginRight="225dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="20/50"
                android:layout_alignParentRight="true"
                android:layout_below="@id/coin"
                android:layout_marginTop="18dp"
                android:layout_marginRight="25dp"
                />



        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/black"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quest"
                android:textSize="30dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="35dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="#123456"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@color/white"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>